<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <h1>Edit Campground: "<%= campground.name %>"</h1>
    
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea type="text" name="campground[description]" rows="10" class="form-control"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>            
        </div>
    </div>


    
    <hr>
    
    <a href="/campgrounds">View All Campgrounds</a>

</div>




<% include ../partials/footer %>