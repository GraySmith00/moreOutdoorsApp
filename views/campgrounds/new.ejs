<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <h1>Add a new Campground</h1>
    
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="name">
                </div>
                <div class="form-group">
                    <input type="text" name="image" class="form-control" placeholder="image url">
                </div>
                <div class="form-group">
                    <input type="number" name="price" class="form-control" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" name="description" class="form-control" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>            
        </div>
    </div>


    
    <hr>
    
    <a href="/campgrounds">View All Campgrounds</a>

</div>




